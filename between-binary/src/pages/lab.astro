---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('lab');
---

<Layout title="Laboratory | Between Binary">
	<nav class="fixed w-full z-50 bg-[#050505]/80 backdrop-blur-md border-b border-white/5">
		<div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
			<a href="/" class="text-2xl font-bold font-mono tracking-tighter text-white">
				BETWEEN <span class="text-amber-200">BINARY</span>
			</a>
			<div class="hidden md:flex space-x-8 text-sm font-light tracking-wide text-gray-300">
				<a href="/garden" class="hover:text-amber-200 transition-colors">GARDEN</a>
				<a href="/lab" class="text-amber-200 transition-colors">LAB</a>
				<a href="/thoughts" class="hover:text-amber-200 transition-colors">THOUGHTS</a>
				<a href="/about" class="hover:text-amber-200 transition-colors">ABOUT</a>
			</div>
		</div>
	</nav>

	<main class="pt-32 pb-20 px-6 font-sans min-h-screen">
		<div class="max-w-7xl mx-auto">
			<header class="mb-16">
				<div class="inline-block px-4 py-1 text-xs font-mono text-amber-200 border border-amber-900/50 rounded-full bg-amber-900/10 tracking-widest mb-4">
					EXPERIMENTS & PROTOTYPES
				</div>
				<h1 class="text-5xl md:text-7xl font-bold font-serif text-white mb-6">
					The <span class="text-transparent bg-clip-text bg-gradient-to-r from-amber-400 to-amber-600">Laboratory</span>
				</h1>
				<p class="text-xl text-slate-300 font-light max-w-2xl">
					A chaotic workspace for VR concepts, embedded systems, and physical interfaces.
				</p>
			</header>

			<div class="grid grid-cols-1 md:grid-cols-2 gap-8">
				{projects.map((project) => (
					<a href={`/lab/${project.slug}/`} class="block group">
						<div class="p-8 rounded-3xl bg-white/5 border border-white/10 hover:border-amber-500/30 transition-all h-full">
							<div class="h-48 mb-6 rounded-2xl bg-gradient-to-br from-amber-900/40 to-black relative overflow-hidden">
								<div class="absolute inset-0 flex items-center justify-center">
									<i class="fas fa-flask text-4xl text-amber-200/50 group-hover:scale-110 transition-transform duration-500"></i>
								</div>
								<div class="absolute top-4 right-4 bg-black/50 backdrop-blur px-2 py-1 rounded text-xs font-mono uppercase text-white border border-white/10">
									{project.data.status}
								</div>
							</div>
							<h2 class="text-2xl font-bold text-white mb-2 group-hover:text-amber-200 transition-colors">{project.data.title}</h2>
							<p class="text-slate-400 font-light mb-4">{project.data.description}</p>
							<div class="flex flex-wrap gap-2">
								{project.data.stack && project.data.stack.slice(0, 3).map((tech: any) => (
									<span class="text-xs text-slate-500 font-mono bg-white/5 px-2 py-1 rounded">{tech}</span>
								))}
							</div>
						</div>
					</a>
				))}
			</div>
		</div>
	</main>
</Layout>
