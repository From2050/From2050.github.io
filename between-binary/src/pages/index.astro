---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import StarMap from '../components/StarMap';
---

<Layout title="Between Binary | Digital Garden">
	<Header />
	<main class="relative pt-32 pb-20 px-6 font-sans">
		<div class="max-w-7xl mx-auto grid grid-cols-1 lg:grid-cols-2 gap-12 items-center min-h-[60vh]">
			<div class="space-y-8 z-10">
				<div class="inline-block px-4 py-1 text-xs font-mono text-amber-200 border border-amber-900/50 rounded-full bg-amber-900/10 tracking-widest">
					LABORATORY • NOTES • EXPERIMENTS
				</div>
				<h1 class="text-6xl md:text-8xl font-bold leading-tight tracking-tight text-white font-serif">
					Between <br>
					<span class="text-transparent bg-clip-text bg-gradient-to-r from-[#FFD194] via-[#D1914B] to-[#70A1FF] drop-shadow-[0_0_30px_rgba(255,200,150,0.2)]">
						Binary
					</span>
				</h1>
				<p class="text-xl md:text-2xl text-slate-300 font-light max-w-lg leading-relaxed">
					A digital garden for cultivating immersive tech. <br>
					<span id="typed-output" class="text-amber-100/80 italic font-mono">Exploring the space properly.</span>
				</p>
				
				<script>
					const words = ["VR Experiments", "Learning Notes", "Parkour Logs", "System Prototypes"];
					let i = 0;
					
					function typeWriter() {
						const el = document.getElementById('typed-output');
						if (el) {
							el.textContent = words[i];
							i = (i + 1) % words.length;
						}
					}
					// Initial update
					typeWriter();
					// Cycle every 2s
					setInterval(typeWriter, 2000);
				</script>
				<div class="flex space-x-4 pt-6">
					<a href="/lab/" class="px-8 py-3 bg-gradient-to-r from-amber-700 to-amber-600 hover:from-amber-600 hover:to-amber-500 text-white font-medium rounded-full transition-all shadow-lg shadow-amber-900/30 tracking-wide flex items-center gap-2">
						<i class="fas fa-flask"></i> Enter Lab
					</a>
					<a href="/garden/" class="px-8 py-3 bg-white/5 backdrop-blur-sm border border-white/10 hover:bg-white/10 text-white rounded-full transition-all font-light tracking-wide flex items-center gap-2">
						 <i class="fas fa-book-open"></i> Explore Notes
					</a>
				</div>
			</div>
			
			<!-- Star Map Visualization -->
			<div class="relative hidden lg:block h-full min-h-[500px] perspective-1000">
				<StarMap client:load />
			</div>
		</div>

		<!-- Pillars / Recent Posts -->
		<div class="max-w-7xl mx-auto mt-24">
			<h2 class="text-2xl font-light mb-10 tracking-widest text-amber-200/60 uppercase text-center">
				<i class="fas fa-seedling mr-2"></i> Growing Ideas
			</h2>
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
				
				<!-- VR Card -->
				<!-- VR Card -->
				<a href="/topics/vr/" class="bg-white/5 backdrop-blur-md border border-white/5 p-6 rounded-2xl flex flex-col h-full cursor-pointer hover:transform hover:-translate-y-2 transition-all duration-300 hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.3)] hover:bg-white/10 group">
					<div class="h-40 w-full rounded-xl mb-4 overflow-hidden relative bg-gradient-to-br from-amber-900/40 via-purple-900/20 to-slate-900">
						 <div class="absolute bottom-3 left-4 text-xs font-bold tracking-widest text-amber-300 uppercase">VR / Education</div>
						 <div class="absolute top-3 right-4"><i class="fas fa-vr-cardboard text-amber-200/50 text-xl group-hover:text-amber-200 group-hover:scale-110 transition-all duration-300"></i></div>
					</div>
					<h3 class="text-lg font-medium mb-3 text-white leading-snug group-hover:text-amber-300 transition-colors">Immersive Storytelling</h3>
					<p class="text-slate-400 text-sm flex-grow font-light leading-relaxed">Narrative as the most powerful learning tool.</p>
				</a>

				<!-- Parkour Card -->
				<!-- Parkour Card -->
				<a href="/topics/movement/" class="bg-white/5 backdrop-blur-md border border-white/5 p-6 rounded-2xl flex flex-col h-full cursor-pointer hover:transform hover:-translate-y-2 transition-all duration-300 hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.3)] hover:bg-white/10 group">
					<div class="h-40 w-full rounded-xl mb-4 overflow-hidden relative bg-gradient-to-br from-emerald-900/40 via-slate-900 to-slate-900">
						<div class="absolute bottom-3 left-4 text-xs font-bold tracking-widest text-emerald-300 uppercase">Movement</div>
						<div class="absolute top-3 right-4"><i class="fas fa-running text-emerald-200/50 text-xl group-hover:text-emerald-200 group-hover:scale-110 transition-all duration-300"></i></div>
					</div>
					<h3 class="text-lg font-medium mb-3 text-white leading-snug group-hover:text-emerald-300 transition-colors">Flow State & Parkour</h3>
					<p class="text-slate-400 text-sm flex-grow font-light leading-relaxed">Cognitive growth through physical obstacles.</p>
				</a>

				<!-- Embedded Card -->
				<!-- Embedded Card -->
				<a href="/topics/embedded/" class="bg-white/5 backdrop-blur-md border border-white/5 p-6 rounded-2xl flex flex-col h-full cursor-pointer hover:transform hover:-translate-y-2 transition-all duration-300 hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.3)] hover:bg-white/10 group">
				   <div class="h-40 w-full rounded-xl mb-4 overflow-hidden relative bg-gradient-to-br from-blue-900/40 via-slate-900 to-slate-900">
					   <div class="absolute bottom-3 left-4 text-xs font-bold tracking-widest text-blue-300 uppercase">Embedded</div>
					   <div class="absolute top-3 right-4"><i class="fas fa-microchip text-blue-200/50 text-xl group-hover:text-blue-200 group-hover:scale-110 transition-all duration-300"></i></div>
				   </div>
				   <h3 class="text-lg font-medium mb-3 text-white leading-snug group-hover:text-blue-300 transition-colors">Tangible Interfaces</h3>
				   <p class="text-slate-400 text-sm flex-grow font-light leading-relaxed">Haptic ESP32 gloves for digital worlds.</p>
			   </a>

				<!-- Design Card -->
				<!-- Design Card -->
				<a href="/topics/design/" class="bg-white/5 backdrop-blur-md border border-white/5 p-6 rounded-2xl flex flex-col h-full cursor-pointer hover:transform hover:-translate-y-2 transition-all duration-300 hover:shadow-[0_20px_40px_-10px_rgba(0,0,0,0.3)] hover:bg-white/10 group">
				   <div class="h-40 w-full rounded-xl mb-4 overflow-hidden relative bg-gradient-to-br from-indigo-900/40 via-purple-900/20 to-slate-900">
					   <div class="absolute bottom-3 left-4 text-xs font-bold tracking-widest text-indigo-300 uppercase">Design</div>
					   <div class="absolute top-3 right-4"><i class="fas fa-pen-ruler text-indigo-200/50 text-xl group-hover:text-indigo-200 group-hover:scale-110 transition-all duration-300"></i></div>
				   </div>
				   <h3 class="text-lg font-medium mb-3 text-white leading-snug group-hover:text-indigo-300 transition-colors">Cognitive Layouts</h3>
				   <p class="text-slate-400 text-sm flex-grow font-light leading-relaxed">Interfaces that respect human cognition.</p>
			   </a>

			</div>
		</div>
	</main>
</Layout>
