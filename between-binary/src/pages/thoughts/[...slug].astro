---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import ArticleLayout from '../../components/ArticleLayout.astro';

export async function getStaticPaths() {
	const posts = await getCollection('thoughts');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<Layout title={`${post.data.title} | Thoughts`}>
	<Header />

	<main class="pt-32 pb-20 px-6 min-h-screen">
		<article class="max-w-4xl mx-auto">
			<header class="max-w-[680px] mx-auto mb-12">
				<div class="text-amber-500/70 font-mono text-sm mb-4 tracking-wide">
					{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
				</div>
				<h1 class="text-4xl md:text-5xl font-bold text-white mb-6 leading-[1.15] tracking-tight" style="font-family: 'Source Serif 4', Georgia, serif;">
					{post.data.title}
				</h1>
				{post.data.tags && (
					<div class="flex gap-2 mt-4">
						{post.data.tags.map((tag: any) => (
							<span class="px-3 py-1 bg-white/5 rounded-full text-xs text-slate-400 border border-white/5 font-mono">#{tag}</span>
						))}
					</div>
				)}
			</header>

			<ArticleLayout>
				<Content />
			</ArticleLayout>
		</article>
	</main>
</Layout>
