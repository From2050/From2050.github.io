---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('thoughts')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---



<Layout title="Thoughts | Between Binary">
	<Header />

	<main class="pt-32 pb-20 px-6 font-sans min-h-screen">
		<div class="max-w-4xl mx-auto">
			<h1 class="text-4xl md:text-6xl font-bold font-serif text-white mb-12">Thoughts</h1>
			
			<div class="grid gap-12">
				{posts.map((post) => (
					<article class="border-b border-white/10 pb-12">
						<div class="text-amber-500 font-mono text-sm mb-2">
							{post.data.pubDate.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
						</div>
						<h2 class="text-3xl font-bold text-white mb-4 hover:text-amber-200 transition-colors cursor-pointer">
							<a href={`/thoughts/${post.slug}/`}>{post.data.title}</a>
						</h2>
						<p class="text-slate-300 leading-relaxed mb-6">
							{post.data.description}
						</p>
						<a href={`/thoughts/${post.slug}/`} class="text-amber-400 hover:text-amber-300 font-medium">Read more â†’</a>
					</article>
				))}
			</div>
		</div>
	</main>
</Layout>
