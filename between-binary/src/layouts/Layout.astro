---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Between Binary - Digital Garden & Lab" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700&family=Space+Grotesk:wght@300;500;700&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-[#050505] text-white font-sans overflow-x-hidden">
		<!-- Background Canvas Container -->
		<div class="fixed inset-0 z-[-1]">
			<div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_#302b63_0%,_#050505_100%)] opacity-40"></div>
			<div class="absolute inset-0 bg-[linear-gradient(135deg,_#0f0c29_0%,_#302b63_50%,_#24243e_100%)] opacity-80"></div>
		</div>
		
		<slot />
	</body>
</html>

<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
	}
	html {
		font-family: system-ui, sans-serif;
	}
</style>
