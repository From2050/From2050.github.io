---
interface Props {
	title: string;
}

const { title } = Astro.props;
import NeuroBackground from '../components/NeuroBackground.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Between Binary - Digital Garden & Lab" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;700&family=Space+Grotesk:wght@300;500;700&family=Source+Serif+4:ital,opsz,wght@0,8..60,300;0,8..60,400;0,8..60,600;0,8..60,700;1,8..60,400;1,8..60,600&display=swap" rel="stylesheet">
		<title>{title}</title>
	</head>
	<body class="bg-[#050505] text-white overflow-x-hidden" style="font-family: 'Outfit', sans-serif;">
		<NeuroBackground />
		
		<slot />
		
		<style is:global>
			/* Core Defaults */
			html, body {
				height: 100%;
				margin: 0;
				padding: 0;
				font-family: 'Outfit', sans-serif;
			}
		</style>
	</body>
</html>

