---
interface Props {
	href?: string;
	variant?: 'primary' | 'secondary';
	icon?: string;
}

const { href = '#', variant = 'primary', icon } = Astro.props;

const styles = {
	primary: 'bg-gradient-to-r from-amber-700 to-amber-600 hover:from-amber-600 hover:to-amber-500 text-white shadow-lg shadow-amber-900/30',
	secondary: 'bg-white/5 border border-white/10 hover:bg-white/10 text-white',
};
---

<a href={href} class={`inline-flex items-center gap-2 px-6 py-2 rounded-full font-medium transition-all transform hover:-translate-y-0.5 no-underline ${styles[variant]}`}>
	{icon && <i class={`fas ${icon}`}></i>}
	<span><slot /></span>
</a>
